{% extends 'CampaignChainCoreBundle:Base:base.html.twig' %}

{% block body %}
    {% include 'CampaignChainCoreBundle:Base:datatable.html.twig' %}

    <!--<div class="table-responsive">-->
        <table id="example" class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th>Resource</th>
                    <th>Key</th>
                    <th>Secret</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for app in apps %}
                    <tr>
                        <td>{{ app.resourceOwner }}</td>
                        <td>{{ app.key }}</td>
                        <td>{{ app.secret }}</td>
                        <td>
                            <a role="button" class="btn btn-primary"
                               data-toggle="tooltip" data-placement="top" data-original-title="Edit"
                               href="{{ path('campaignchain_security_authentication_client_oauth_apps_edit',{'id':app.id}) }}">
                                <span class="fa fa-pencil"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    <!--</div>-->
{% endblock %}
